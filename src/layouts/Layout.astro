---
import Header from "../components/global/Header.astro";
import Footer from "../components/global/Footer.astro";

interface Props {
  title?: string;
  description?: string;
}

const { 
  title = "NJ Express Locksmith | Mobile Locksmith Service in New Jersey", 
  description = "Professional mobile locksmith services in New Jersey. Emergency lockouts, key duplication, lock repair, and more. Licensed and insured. Call (551) 305-7525." 
} = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Header />
		
		<main>
			<slot />
		</main>
		
		<Footer />
	</body>
</html>
